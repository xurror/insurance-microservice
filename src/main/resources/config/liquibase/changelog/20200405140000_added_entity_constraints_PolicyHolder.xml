<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <!--
        Added the constraints for entity PolicyHolder.
    -->
    <changeSet id="20200405140000-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="policy_holder"
                                 constraintName="fk_policy_holder_customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="customer"/>

        <addForeignKeyConstraint baseColumnNames="quote_id"
                                 baseTableName="policy_holder"
                                 constraintName="fk_policy_holder_quote_id"
                                 referencedColumnNames="id"
                                 referencedTableName="quote"/>

    </changeSet>
</databaseChangeLog>
